<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/top"
    tools:context="devsbox.jihanislam007.uaplocator.InfoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="24dp">

            <Button
                android:onClick="lib"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:background="#00a8c225"
                android:text="Library"
                android:textColor="#ed7234"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:onClick="arch"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:background="#00a8c225"
                android:text="ARCHITECTURE"
                android:textColor="#ed7234"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:onClick="cse"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:background="#00a8c225"
                android:text="CSE"
                android:textColor="#ed7234"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:onClick="civ"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:background="#00a8c225"
                android:text="CIVIL"
                android:textColor="#ed7234"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:onClick="eee3"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:background="#00a8c225"
                android:text="EEE"
                android:textColor="#ed7234"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:onClick="phrma"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:background="#00a8c225"
                android:text="PHARMACY"
                android:textColor="#ed7234"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:onClick="english"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:background="#00a8c225"
                android:text="ENGLISH"
                android:textColor="#ed7234"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:onClick="admin"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:background="#00a8c225"
                android:text="Administration office"
                android:textColor="#ed7234"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <Button
                android:onClick="plaza"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:background="#00a8c225"
                android:text="Plaza"
                android:textColor="#ed7234"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:onClick="backIn"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:background="#00a8c225"
                android:text="Back to homepage"
                android:textColor="#ed7234"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>
